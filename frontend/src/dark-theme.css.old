/* ========================================
   深色主题 - 完全独立的深色模式样式
   优先级最高，覆盖所有其他样式
   ======================================== */

/* ===== 基础样式 ===== */
/* 强制所有根元素为深色背景 */
html.dark,
html.dark body,
body.dark {
  background-color: #121212 !important;
  color: #e0e0e0 !important;
  min-height: 100vh !important;
}

.dark,
.dark body {
  background-color: #121212 !important;
  color: #e0e0e0 !important;
}

.dark #app {
  background-color: transparent !important;
}

.dark .app-container {
  background-color: #121212 !important;
}

.dark .main-content {
  background-color: transparent !important;
}

.dark .el-main {
  background-color: transparent !important;
}

.dark .el-container {
  background-color: transparent !important;
}

/* ===== 工具容器 ===== */
.dark .tool-container {
  background-color: transparent !important;
  color: #e0e0e0 !important;
}

.dark .tool-content {
  background-color: transparent !important;
  color: #e0e0e0 !important;
}

/* ===== 标题 ===== */
.dark .tool-header h1,
.dark .tool-header h2,
.dark .tool-header h3,
.dark .tool-header h4,
.dark h1,
.dark h2,
.dark h3,
.dark h4 {
  color: #e0e0e0 !important;
}

/* ===== 面板和卡片 ===== */
.dark .editor-panel,
.dark .panel,
.dark .code-panel,
.dark .result-card,
.dark .result-panel,
.dark .output-panel,
.dark .card,
.dark .info-card,
.dark .stats-card {
  background-color: #1e1e1e !important;
  border-color: #333 !important;
  color: #e0e0e0 !important;
}

/* ===== 面板标题 ===== */
.dark .panel-header,
.dark .editor-header {
  background-color: #2d2d2d !important;
  color: #e0e0e0 !important;
  border-bottom-color: #404040 !important;
}

/* ===== 代码编辑器和文本区域 ===== */
.dark .code-editor,
.dark textarea.code-editor,
.dark .code-area,
.dark textarea.code-input,
.dark .text-area,
.dark textarea {
  background-color: #1e1e1e !important;
  color: #d4d4d4 !important;
  border-color: #333 !important;
}

.dark .code-editor::placeholder,
.dark textarea::placeholder {
  color: #909399 !important;
}

/* ===== 代码高亮 ===== */
.dark .hljs,
.dark pre code,
.dark code {
  background-color: #2a2a2a !important;
  color: #e0e0e0 !important;
}

.dark code {
  padding: 2px 6px;
  border-radius: 3px;
}

/* ===== Element Plus 组件 ===== */

/* Card 卡片 */
.dark .el-card {
  background-color: #1e1e1e !important;
  border-color: #333 !important;
  color: #e0e0e0 !important;
}

.dark .el-card__header {
  background-color: #252525 !important;
  border-color: #333 !important;
  color: #e0e0e0 !important;
}

.dark .el-card__body {
  background-color: #1e1e1e !important;
  color: #e0e0e0 !important;
}

/* Input 输入框 */
.dark .el-input__wrapper {
  background-color: #2a2a2a !important;
  box-shadow: 0 0 0 1px #404040 inset !important;
}

.dark .el-input__wrapper:hover {
  box-shadow: 0 0 0 1px #606060 inset !important;
}

.dark .el-input__wrapper.is-focus {
  box-shadow: 0 0 0 1px #409eff inset !important;
}

.dark .el-input__inner {
  color: #e0e0e0 !important;
  background-color: transparent !important;
}

.dark .el-input__inner::placeholder {
  color: #909399 !important;
}

/* Textarea 文本域 */
.dark .el-textarea__inner {
  background-color: #2a2a2a !important;
  border-color: #404040 !important;
  color: #e0e0e0 !important;
}

.dark .el-textarea__inner:hover {
  border-color: #606060 !important;
}

.dark .el-textarea__inner:focus {
  border-color: #409eff !important;
}

.dark .el-textarea__inner::placeholder {
  color: #909399 !important;
}

/* Select 选择器 */

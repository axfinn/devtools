/* ===== 强制覆盖所有可能的白色背景 ===== */
.dark div[style*="background-color: rgb(255, 255, 255)"],
.dark div[style*="background-color:#ffffff"],
.dark div[style*="background-color:#fff"],
.dark div[style*="background: rgb(255, 255, 255)"],
.dark div[style*="background:#ffffff"],
.dark div[style*="background:#fff"] {
  background-color: #1e1e1e !important;
}

/* 强制所有未定义背景的容器为透明 */
.dark .container,
.dark .wrapper,
.dark .content,
.dark .section {
  background-color: transparent !important;
}

/* Element Plus 的各种容器 */
.dark .el-scrollbar {
  background-color: transparent !important;
}

.dark .el-scrollbar__view {
  background-color: transparent !important;
}

.dark .el-scrollbar__wrap {
  background-color: transparent !important;
}

/* 确保所有表单元素都是深色 */
.dark input:not([type="checkbox"]):not([type="radio"]),
.dark select,
.dark textarea {
  background-color: #2a2a2a !important;
  color: #e0e0e0 !important;
  border-color: #404040 !important;
}

.dark input::placeholder,
.dark textarea::placeholder {
  color: #909399 !important;
}

/* 移除可能的白色边框 */
.dark * {
  border-color: inherit;
}

/* 确保所有带 class 的 div 默认透明背景 */
.dark div[class] {
  background-color: transparent;
}

.dark div[class].panel,
.dark div[class].card,
.dark div[class].editor {
  background-color: #1e1e1e !important;
}


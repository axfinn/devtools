/* 工具页面通用主题样式 */

/* 工具标题 */
.tool-header h2,
.tool-header h1 {
  color: #333 !important;
}

.dark .tool-header h2,

/* 编辑器面板 */
.editor-panel,
.panel,
.code-panel {
  background-color: #ffffff !important;
  border: 1px solid #e0e0e0 !important;
}

.dark .editor-panel,
.dark .panel,

/* 面板标题 */
.panel-header,
.editor-header {
  background-color: #f5f5f5 !important;
  color: #333 !important;
  border-bottom: 1px solid #e0e0e0 !important;
}

.dark .panel-header,

/* 文本区域 */
.text-area,
.code-area,
textarea.code-input {
  background-color: #ffffff !important;
  color: #333 !important;
  border-color: #e0e0e0 !important;
}

.dark .text-area,
.dark .code-area,

/* 结果区域 */
.result-card,
.result-panel,
.output-panel {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .result-card,
.dark .result-panel,

/* 信息卡片 */
.info-card,
.stats-card {
  background-color: #f5f5f5 !important;
  color: #333 !important;
}

.dark .info-card,

/* 代码高亮覆盖 */
.hljs {
  background: #f5f5f5 !important;
  color: #333 !important;
}


/* 标签 */
.info-item label,
.form-label,
.field-label {
  color: #666 !important;
}

.dark .info-item label,
.dark .form-label,

/* 分隔线 */
.divider,
hr {
  border-color: #e0e0e0 !important;
}

.dark .divider,

/* 聊天消息 */
.message-item {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}


.message-content {
  color: #333 !important;
}


/* 房间卡片 */
.room-card {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}


.room-card h3 {
  color: #333 !important;
}


/* URL 列表 */
.url-item {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}


/* 差异对比 */
.diff-line {
  color: #333 !important;
}


.diff-added {
  background-color: #e6ffed !important;
}


.diff-removed {
  background-color: #ffebe9 !important;
}


/* 文本统计 */
.stats-grid,
.info-grid {
  background-color: #f5f5f5 !important;
}

.dark .stats-grid,

.stat-item,
.info-item {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .stat-item,

.stat-value,
.info-value {
  color: #409eff !important;
}

/* 时间戳显示 */
.timestamp-display,
.time-display {
  background-color: #f5f5f5 !important;
  color: #333 !important;
  border-color: #e0e0e0 !important;
}

.dark .timestamp-display,

/* DNS 记录 */
.dns-record,
.record-item {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .dns-record,

/* 正则测试匹配 */
.match-item {
  background-color: #e6f7ff !important;
  border-color: #91d5ff !important;
}


/* 文件上传区域 */
.upload-area,
.drop-zone {
  background-color: #fafafa !important;
  border-color: #d9d9d9 !important;
  color: #666 !important;
}

.dark .upload-area,

/* 提示区域 */
.tips-section,
.hint-section {
  background-color: #f0f9ff !important;
  border-color: #bae7ff !important;
}

.dark .tips-section,

.tip-text,
.hint-text {
  color: #666 !important;
}

.dark .tip-text,

/* 预览区域 */
.preview-panel,
.preview-area {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .preview-panel,

/* Markdown 预览 */
.markdown-preview {
  background-color: #ffffff !important;
  color: #333 !important;
}


.markdown-preview h1,
.markdown-preview h2,
.markdown-preview h3,
.markdown-preview h4,
.markdown-preview h5,
.markdown-preview h6 {
  color: #333 !important;
}

.dark .markdown-preview h1,
.dark .markdown-preview h2,
.dark .markdown-preview h3,
.dark .markdown-preview h4,
.dark .markdown-preview h5,

.markdown-preview code {
  background-color: #f5f5f5 !important;
  color: #c7254e !important;
}


.markdown-preview pre {
  background-color: #f5f5f5 !important;
  border-color: #e0e0e0 !important;
}


.markdown-preview blockquote {
  border-left-color: #d0d0d0 !important;
  color: #666 !important;
}


.markdown-preview table {
  border-color: #e0e0e0 !important;
}


.markdown-preview th {
  background-color: #f5f5f5 !important;
  color: #333 !important;
}


.markdown-preview td {
  border-color: #e0e0e0 !important;
  color: #333 !important;
}


/* Mermaid 图表容器 */
.mermaid-container {
  background-color: #ffffff !important;
}


/* 加载状态 */
.loading-container {
  color: #666 !important;
}


/* 空状态 */
.empty-state {
  color: #999 !important;
}


/* 错误状态 */
.error-message {
  background-color: #fff2f0 !important;
  border-color: #ffccc7 !important;
  color: #cf1322 !important;
}


/* 成功状态 */
.success-message {
  background-color: #f6ffed !important;
  border-color: #b7eb8f !important;
  color: #389e0d !important;
}


/* 聊天室特定样式 */
.room-id-tag {
  background: #f0f0f0 !important;
  color: #666 !important;
}


.chat-container {
  background-color: #fafafa !important;
  border-color: #e0e0e0 !important;
}


.chat-messages {
  background-color: #ffffff !important;
}


.input-area {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}


/* 房间列表 */
.room-list {
  background-color: #fafafa !important;
}


/* Mermaid 图表在暗色模式下的处理 */

/* PasteBin 样式 */
.paste-form,
.paste-view {
  background-color: #ffffff !important;
}

.dark .paste-form,

.code-display {
  background-color: #f5f5f5 !important;
  color: #333 !important;
}


/* Mock API */
.api-info,
.endpoint-card {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .api-info,

.log-item {
  background-color: #fafafa !important;
  border-color: #e0e0e0 !important;
}


/* Short URL */
.url-display {
  background-color: #f5f5f5 !important;
  color: #333 !important;
  border-color: #e0e0e0 !important;
}


/* 统计卡片 */
.stat-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
}


/* 二维码容器 */
.qr-container {
  background-color: #ffffff !important;
  padding: 20px;
  border-radius: 8px;
}


/* 特性提示标签 */
.feature-tag {
  background-color: #f0f0f0 !important;
  color: #666 !important;
}


/* 代码行号 */
.line-number {
  color: #999 !important;
  background-color: #f5f5f5 !important;
}


/* Excalidraw 页面 */
.share-container {
  background: #f5f5f5 !important;
}


.share-header h2 {
  color: #333 !important;
}


.viewer-wrapper {
  background: #ffffff !important;
}


.editor-wrapper {
  background-color: #ffffff !important;
}


/* JSON 格式化 */
.json-viewer {
  background-color: #ffffff !important;
  color: #333 !important;
}


/* 文本工具 */
.text-operation {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}


/* 工具页面通用主题样式 */

/* 工具标题 */
.tool-header h2,
.tool-header h1 {
  color: #333 !important;
}

.dark .tool-header h2,
.dark .tool-header h1 {
  color: #e0e0e0 !important;
}

/* 编辑器面板 */
.editor-panel,
.panel,
.code-panel {
  background-color: #ffffff !important;
  border: 1px solid #e0e0e0 !important;
}

.dark .editor-panel,
.dark .panel,
.dark .code-panel {
  background-color: #1e1e1e !important;
  border-color: #333 !important;
}

/* 面板标题 */
.panel-header,
.editor-header {
  background-color: #f5f5f5 !important;
  color: #333 !important;
  border-bottom: 1px solid #e0e0e0 !important;
}

.dark .panel-header,
.dark .editor-header {
  background-color: #2d2d2d !important;
  color: #e0e0e0 !important;
  border-bottom-color: #404040 !important;
}

/* 文本区域 */
.text-area,
.code-area,
textarea.code-input {
  background-color: #ffffff !important;
  color: #333 !important;
  border-color: #e0e0e0 !important;
}

.dark .text-area,
.dark .code-area,
.dark textarea.code-input {
  background-color: #1e1e1e !important;
  color: #e0e0e0 !important;
  border-color: #333 !important;
}

/* 结果区域 */
.result-card,
.result-panel,
.output-panel {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .result-card,
.dark .result-panel,
.dark .output-panel {
  background-color: #1e1e1e !important;
  border-color: #333 !important;
}

/* 信息卡片 */
.info-card,
.stats-card {
  background-color: #f5f5f5 !important;
  color: #333 !important;
}

.dark .info-card,
.dark .stats-card {
  background-color: #2d2d2d !important;
  color: #e0e0e0 !important;
}

/* 代码高亮覆盖 */
.hljs {
  background: #f5f5f5 !important;
  color: #333 !important;
}

.dark .hljs {
  background: #1e1e1e !important;
  color: #e0e0e0 !important;
}

/* 标签 */
.info-item label,
.form-label,
.field-label {
  color: #666 !important;
}

.dark .info-item label,
.dark .form-label,
.dark .field-label {
  color: #a0a0a0 !important;
}

/* 分隔线 */
.divider,
hr {
  border-color: #e0e0e0 !important;
}

.dark .divider,
.dark hr {
  border-color: #333 !important;
}

/* 聊天消息 */
.message-item {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .message-item {
  background-color: #2d2d2d !important;
  border-color: #404040 !important;
}

.message-content {
  color: #333 !important;
}

.dark .message-content {
  color: #e0e0e0 !important;
}

/* 房间卡片 */
.room-card {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .room-card {
  background-color: #2d2d2d !important;
  border-color: #404040 !important;
}

.room-card h3 {
  color: #333 !important;
}

.dark .room-card h3 {
  color: #e0e0e0 !important;
}

/* URL 列表 */
.url-item {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .url-item {
  background-color: #2d2d2d !important;
  border-color: #404040 !important;
}

/* 差异对比 */
.diff-line {
  color: #333 !important;
}

.dark .diff-line {
  color: #e0e0e0 !important;
}

.diff-added {
  background-color: #e6ffed !important;
}

.dark .diff-added {
  background-color: #1f3a2d !important;
}

.diff-removed {
  background-color: #ffebe9 !important;
}

.dark .diff-removed {
  background-color: #3a1f1f !important;
}

/* 文本统计 */
.stats-grid,
.info-grid {
  background-color: #f5f5f5 !important;
}

.dark .stats-grid,
.dark .info-grid {
  background-color: #2d2d2d !important;
}

.stat-item,
.info-item {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .stat-item,
.dark .info-item {
  background-color: #1e1e1e !important;
  border-color: #333 !important;
}

.stat-value,
.info-value {
  color: #409eff !important;
}

/* 时间戳显示 */
.timestamp-display,
.time-display {
  background-color: #f5f5f5 !important;
  color: #333 !important;
  border-color: #e0e0e0 !important;
}

.dark .timestamp-display,
.dark .time-display {
  background-color: #2d2d2d !important;
  color: #e0e0e0 !important;
  border-color: #404040 !important;
}

/* DNS 记录 */
.dns-record,
.record-item {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .dns-record,
.dark .record-item {
  background-color: #2d2d2d !important;
  border-color: #404040 !important;
}

/* 正则测试匹配 */
.match-item {
  background-color: #e6f7ff !important;
  border-color: #91d5ff !important;
}

.dark .match-item {
  background-color: #1f3a5f !important;
  border-color: #2d5a8a !important;
}

/* 文件上传区域 */
.upload-area,
.drop-zone {
  background-color: #fafafa !important;
  border-color: #d9d9d9 !important;
  color: #666 !important;
}

.dark .upload-area,
.dark .drop-zone {
  background-color: #252525 !important;
  border-color: #404040 !important;
  color: #909399 !important;
}

/* 提示区域 */
.tips-section,
.hint-section {
  background-color: #f0f9ff !important;
  border-color: #bae7ff !important;
}

.dark .tips-section,
.dark .hint-section {
  background-color: #1f2937 !important;
  border-color: #2d5a8a !important;
}

.tip-text,
.hint-text {
  color: #666 !important;
}

.dark .tip-text,
.dark .hint-text {
  color: #a0a0a0 !important;
}

/* 预览区域 */
.preview-panel,
.preview-area {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .preview-panel,
.dark .preview-area {
  background-color: #1e1e1e !important;
  border-color: #333 !important;
}

/* Markdown 预览 */
.markdown-preview {
  background-color: #ffffff !important;
  color: #333 !important;
}

.dark .markdown-preview {
  background-color: #1e1e1e !important;
  color: #e0e0e0 !important;
}

.markdown-preview h1,
.markdown-preview h2,
.markdown-preview h3,
.markdown-preview h4,
.markdown-preview h5,
.markdown-preview h6 {
  color: #333 !important;
}

.dark .markdown-preview h1,
.dark .markdown-preview h2,
.dark .markdown-preview h3,
.dark .markdown-preview h4,
.dark .markdown-preview h5,
.dark .markdown-preview h6 {
  color: #e0e0e0 !important;
}

.markdown-preview code {
  background-color: #f5f5f5 !important;
  color: #c7254e !important;
}

.dark .markdown-preview code {
  background-color: #2d2d2d !important;
  color: #e06c75 !important;
}

.markdown-preview pre {
  background-color: #f5f5f5 !important;
  border-color: #e0e0e0 !important;
}

.dark .markdown-preview pre {
  background-color: #2d2d2d !important;
  border-color: #404040 !important;
}

.markdown-preview blockquote {
  border-left-color: #d0d0d0 !important;
  color: #666 !important;
}

.dark .markdown-preview blockquote {
  border-left-color: #404040 !important;
  color: #a0a0a0 !important;
}

.markdown-preview table {
  border-color: #e0e0e0 !important;
}

.dark .markdown-preview table {
  border-color: #404040 !important;
}

.markdown-preview th {
  background-color: #f5f5f5 !important;
  color: #333 !important;
}

.dark .markdown-preview th {
  background-color: #2d2d2d !important;
  color: #e0e0e0 !important;
}

.markdown-preview td {
  border-color: #e0e0e0 !important;
  color: #333 !important;
}

.dark .markdown-preview td {
  border-color: #404040 !important;
  color: #e0e0e0 !important;
}

/* Mermaid 图表容器 */
.mermaid-container {
  background-color: #ffffff !important;
}

.dark .mermaid-container {
  background-color: #1e1e1e !important;
}

/* 加载状态 */
.loading-container {
  color: #666 !important;
}

.dark .loading-container {
  color: #909399 !important;
}

/* 空状态 */
.empty-state {
  color: #999 !important;
}

.dark .empty-state {
  color: #606060 !important;
}

/* 错误状态 */
.error-message {
  background-color: #fff2f0 !important;
  border-color: #ffccc7 !important;
  color: #cf1322 !important;
}

.dark .error-message {
  background-color: #2c1618 !important;
  border-color: #58181c !important;
  color: #ff7875 !important;
}

/* 成功状态 */
.success-message {
  background-color: #f6ffed !important;
  border-color: #b7eb8f !important;
  color: #389e0d !important;
}

.dark .success-message {
  background-color: #1f2c1a !important;
  border-color: #3d5a2f !important;
  color: #95de64 !important;
}

/* 聊天室特定样式 */
.room-id-tag {
  background: #f0f0f0 !important;
  color: #666 !important;
}

.dark .room-id-tag {
  background: #2a2a2a !important;
  color: #a0a0a0 !important;
}

.chat-container {
  background-color: #fafafa !important;
  border-color: #e0e0e0 !important;
}

.dark .chat-container {
  background-color: #1a1a1a !important;
  border-color: #333 !important;
}

.chat-messages {
  background-color: #ffffff !important;
}

.dark .chat-messages {
  background-color: #1e1e1e !important;
}

.input-area {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .input-area {
  background-color: #252525 !important;
  border-color: #404040 !important;
}

/* 房间列表 */
.room-list {
  background-color: #fafafa !important;
}

.dark .room-list {
  background-color: #1a1a1a !important;
}

/* Mermaid 图表在暗色模式下的处理 */
.dark .mermaid svg {
  filter: invert(0.9) hue-rotate(180deg);
}

/* PasteBin 样式 */
.paste-form,
.paste-view {
  background-color: #ffffff !important;
}

.dark .paste-form,
.dark .paste-view {
  background-color: #1e1e1e !important;
}

.code-display {
  background-color: #f5f5f5 !important;
  color: #333 !important;
}

.dark .code-display {
  background-color: #2d2d2d !important;
  color: #e0e0e0 !important;
}

/* Mock API */
.api-info,
.endpoint-card {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .api-info,
.dark .endpoint-card {
  background-color: #2d2d2d !important;
  border-color: #404040 !important;
}

.log-item {
  background-color: #fafafa !important;
  border-color: #e0e0e0 !important;
}

.dark .log-item {
  background-color: #252525 !important;
  border-color: #404040 !important;
}

/* Short URL */
.url-display {
  background-color: #f5f5f5 !important;
  color: #333 !important;
  border-color: #e0e0e0 !important;
}

.dark .url-display {
  background-color: #2d2d2d !important;
  color: #e0e0e0 !important;
  border-color: #404040 !important;
}

/* 统计卡片 */
.stat-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
}

.dark .stat-card {
  background: linear-gradient(135deg, #4a5568 0%, #2d3748 100%) !important;
}

/* 二维码容器 */
.qr-container {
  background-color: #ffffff !important;
  padding: 20px;
  border-radius: 8px;
}

.dark .qr-container {
  background-color: #2d2d2d !important;
}

/* 特性提示标签 */
.feature-tag {
  background-color: #f0f0f0 !important;
  color: #666 !important;
}

.dark .feature-tag {
  background-color: #2a2a2a !important;
  color: #a0a0a0 !important;
}

/* 代码行号 */
.line-number {
  color: #999 !important;
  background-color: #f5f5f5 !important;
}

.dark .line-number {
  color: #606060 !important;
  background-color: #252525 !important;
}

/* Excalidraw 页面 */
.share-container {
  background: #f5f5f5 !important;
}

.dark .share-container {
  background: #1a1a1a !important;
}

.share-header h2 {
  color: #333 !important;
}

.dark .share-header h2 {
  color: #e0e0e0 !important;
}

.viewer-wrapper {
  background: #ffffff !important;
}

.dark .viewer-wrapper {
  background: #121212 !important;
}

.editor-wrapper {
  background-color: #ffffff !important;
}

.dark .editor-wrapper {
  background-color: #1e1e1e !important;
}

/* JSON 格式化 */
.json-viewer {
  background-color: #ffffff !important;
  color: #333 !important;
}

.dark .json-viewer {
  background-color: #1e1e1e !important;
  color: #e0e0e0 !important;
}

/* 文本工具 */
.text-operation {
  background-color: #ffffff !important;
  border-color: #e0e0e0 !important;
}

.dark .text-operation {
  background-color: #2d2d2d !important;
  border-color: #404040 !important;
}
